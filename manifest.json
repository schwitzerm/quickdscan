{
    "manifest_version": 2,
    "name": "Quick DScan",
    "version": "1.0",
    "description": "Takes content from clipboard and uses it as input to dscan.info",
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "button/16.png",
            "32": "button/32.png"
        },
        "default_title": "Quick DScan"
    },
    "permissions": [
        "*://dscan.info/",
        "clipboardRead",
        "tabs"
    ]
}
